{
    "github": {
        "release": true
    },
    "git": {
        "commitMessage": "release: v${version}",
        "tagName": "v${version}"
    },
    "npm": {
        "publish": false
    },
    "hooks": {
        "after:bump": "echo 更新版本成功",
        "after:git:release": "pnpm publish"
    },
    "plugins": {
        "@release-it/conventional-changelog": {
            "preset": "angular",
            "infile": "CHANGELOG.md"
        }
    }
}

